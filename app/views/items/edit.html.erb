<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h4>

      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
   <br>
    <%= form.text_field :title, class: 'form-control', placeholder: "Title"%>
  </div>

  <div class="mb-3">

    <%= form.text_field :description, class: 'form-control', placeholder: "Description" %>
  </div>

  <div class="mb-3">
    <%= form.number_field :price, class: 'form-control', placeholder: "Price" %>
  </div>

  <div class="hidden">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>
  
  <div class="mb-3">
    <%= form.label :category,  class: 'form-label' %>
    <%= form.select :category, @categories%>  
  </div>

  <div class="mb-3">
    <%= form.label "Add a photo", class: "form-label" %>
    <%= form.file_field :photo, class: 'form-control'%>
  </div>

  
    <button type="submit" class="btn btn-success">Update Item</button>
<% end %>

<%= link_to 'Back', items_path, class: 'btn btn-primary' %>
