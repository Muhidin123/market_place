<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table width=1300>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
        <%if !Transaction.all.find_by(item_id: item.id)%>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.category %></td>
        <td>$<%= item.price %></td>
        <td><%= link_to 'Show', item, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Sold', new_transaction_path(item), class: 'btn btn-success' %></td>
        <td><%= button_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'List Another Item', new_item_path ,class: 'btn btn-success'%>


