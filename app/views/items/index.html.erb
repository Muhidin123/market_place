<p id="notice"><%= notice %></p>

<h1>Items For Sale:</h1>

<table class="table table-hover table">
  <thead>
    <tr>
      <th scope="col"  style="width: 5%">#</th>
      <th scope="col" style="width: 19%">Title</th>
      <th scope="col" style="width: 19%">Description</th>
      <th scope="col" style="width: 19%">Category</th>
      <th scope="col" style="width: 19%">Price</th>
      <th colspan="5" style="width: 19%"></th>
      
    </tr>
  </thead>
  <tbody>
  <%i = 1%>
    <% @items.each do |item| %>
      <th scope="row"><%= "#{i}"%></th>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.category %></td>
        <td>$<%= item.price %></td>
        <td><%= link_to 'View', item, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary' %></td>
        <td><%= button_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
      <%i += 1%>
    <% end %>
  </tbody>
</table>

<%= link_to 'List Another Item', new_item_path ,class: 'btn btn-success'%>

