<style> 
.text-center h2 {
  width: 30%;
  margin-left: 35%;
}
#user_email {
  margin-left: 30%;
  text-align: center;
  width: 40%;
  font-size: 20px;
}
#user_password {
  margin-left: 30%;
  text-align: center;
  width: 40%;
  font-size: 20px;
}
</style>
<div class="card px-4"><br>
<h2>Log in</h2><br>

<body class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", placeholder: "Email address"%>
    </h1>

  <h1 class="h3 mb-3 font-weight-normal">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    </h1>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
<br>
    <div class="actions">
      <%= f.submit "Log in" , class: "btn btn-success btn-block"%>
    </div>
  <% end %>
<br>
  <%= render "devise/shared/links" %><br>
</body>
</div>
